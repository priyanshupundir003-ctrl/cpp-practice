class Solution {
public:
    int firstUniqChar(string s) {
        int count[26] = {0};

        //step 1: check frequency
        for(int i = 0; i < s.length(); i++){
            count[s[i] - 'a']++;
        } 
        // step 2: find first unique
        for(int i = 0; i <s.length(); i++){
            if (count[s[i] - 'a'] == 1)
           return i;
        }
        return -1;
    }
};
